<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    tools:context="com.baidoos.guitorio.blood4life.AddDonors.AddDonor">


    <ScrollView
        android:id="@+id/scrollViewAddDonor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/et_first_name"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:hint="Full Name" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/spn_add_blood_group"
                android:layout_below="@+id/et_first_name"
                android:layout_centerHorizontal="true"
                android:spinnerMode="dropdown"
                android:layout_marginTop="10dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/spn_add_donor_gender"
                android:layout_below="@+id/spn_add_blood_group"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:spinnerMode="dropdown" />

            <!--<EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/et_add_donor_weight"
                android:layout_below="@+id/spn_add_donor_gender"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:hint="Weight" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/datePicker_add_donor_date_of_birth"
                android:layout_below="@+id/spn_add_donor_gender"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Date to Donte"
                android:gravity="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/et_add_donor_contact_number"
                android:layout_below="@+id/datePicker_add_donor_date_of_birth"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:hint="Contact Number" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/spn_add_donor_country"
                android:layout_below="@+id/et_add_donor_contact_number"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:spinnerMode="dropdown" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/spn_add_donor_division"
                android:layout_below="@+id/spn_add_donor_country"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:spinnerMode="dropdown" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/spn_add_donor_district"
                android:layout_below="@+id/spn_add_donor_division"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:spinnerMode="dropdown" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/et_add_donor_permanent_address"
                android:layout_below="@+id/spn_add_donor_district"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:hint="Permanent Address" />

        </RelativeLayout>

    </ScrollView>


    <Button
        android:id="@+id/btn_add_Blood_donor"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:text="Add Donor"/>



</RelativeLayout>
